{
  "productName": "Refiner",
  "version": "0.0.1",
  "identifier": "dev.leehuwuj.refiner",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../out"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "height": 400,
        "resizable": false,
        "title": "Refiner",
        "width": 800,
        "visible": true,
        "hiddenTitle": true,
        "decorations": true,
        "transparent": true,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}